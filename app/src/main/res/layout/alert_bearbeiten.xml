<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Bezeichnung"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextBezeichnung" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Start Datum"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextDatum" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="End Dataum"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextEndDatum" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Art der Veranstaltung"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextArt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Bemerkung"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextBemerkung" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Veranstaltung"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextVeranstaltung" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Aktiv"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextAktiv" />

    <Button
        android:text="Speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Speichern" />

</LinearLayout>