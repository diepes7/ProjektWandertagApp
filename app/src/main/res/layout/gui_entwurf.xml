<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <Button
            android:text="Veranstaltungen erstellen"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/button4"
            android:layout_weight="1"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:text="Veranstaltungen löschen/bearbeiten"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

</LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_marginTop="125dp">

            <Button
                android:text="Organisatoren erstellen"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Organisatoren löschen/bearbeiten"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp">

        <Button
            android:text="Teilnehmer erstellen"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/button33"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Teilnehmer löschen/bearbeiten"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
 />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="375dp">

        <Button
            android:text="Live Tracking"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

/>
    </LinearLayout>


</RelativeLayout>